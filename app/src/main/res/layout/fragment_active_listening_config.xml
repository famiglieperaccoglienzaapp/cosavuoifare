                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/slider3" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/slider6" />

                <TextView
