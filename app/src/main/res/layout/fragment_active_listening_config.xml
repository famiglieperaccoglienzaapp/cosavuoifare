                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/slider10" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/slider15" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/slider30" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/slider60" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/slider120" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_config_space_very_small"
            android:layout_marginLeft="@dimen/activity_config_space_small"
            android:layout_marginRight="@dimen/activity_config_space_small"
            android:layout_marginTop="@dimen/activity_config_space_small"
            android:text="@string/activity_active_listening_config_registration"
            android:textColor="@color/soft_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_config_space_small"
            android:layout_marginLeft="@dimen/activity_config_text_margin"
            android:layout_marginRight="@dimen/activity_config_text_margin"
            android:layout_marginTop="@dimen/activity_config_space_very_small"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/preview_play_registration"
                android:layout_width="@dimen/activity_config_button_height_large"
                android:layout_height="@dimen/activity_config_button_height_large"
                android:contentDescription="@string/content_description"
                android:scaleType="fitCenter"
                android:src="@drawable/cell_play" />

            <Button
                android:id="@+id/btn_registration"
                android:layout_width="0dip"
                android:layout_height="@dimen/activity_config_button_height_large"
                android:layout_marginLeft="@dimen/activity_config_space_small"
                android:layout_weight="1"
                android:background="@drawable/config_button"
                android:text="@string/activity_active_listening_config_registration_button" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_config_space_very_small"
            android:layout_marginLeft="@dimen/activity_config_space_small"
            android:layout_marginRight="@dimen/activity_config_space_small"
            android:layout_marginTop="@dimen/activity_config_space_small"
            android:text="@string/activity_active_listening_config_registration_pause"
            android:textColor="@color/soft_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_config_space_small"
            android:layout_marginLeft="@dimen/activity_config_text_margin"
            android:layout_marginRight="@dimen/activity_config_text_margin"
            android:layout_marginTop="@dimen/activity_config_space_very_small"
            android:orientation="vertical" >

            <SeekBar
                android:id="@+id/registration_pause_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/slider0" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
