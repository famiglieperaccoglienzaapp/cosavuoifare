<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_config_space_large"
    android:paddingLeft="@dimen/activity_config_space_large"
    android:paddingRight="@dimen/activity_config_space_large"
    tools:context="com.whatdoyouwanttodo.config.ChessboardSelectorActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/help_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_config_space_small"
            android:paddingTop="@dimen/activity_config_space_small"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TableLayout
                    android:id="@+id/grids_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_config_space_small"
                    android:paddingLeft="@dimen/activity_config_space_small"
                    android:paddingRight="@dimen/activity_config_space_small"
                    android:paddingTop="@dimen/activity_config_space_small" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>