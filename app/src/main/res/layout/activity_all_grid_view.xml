<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_config_space_large"
    android:paddingLeft="@dimen/activity_config_space_large"
    android:paddingRight="@dimen/activity_config_space_large"
    android:paddingTop="@dimen/activity_config_space_large"
    tools:context="com.whatdoyouwanttodo.config.AllGridViewActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#202020"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_config_space_small"
            android:layout_marginLeft="@dimen/activity_config_space_small"
            android:layout_marginRight="@dimen/activity_config_space_small"
            android:layout_marginTop="@dimen/activity_config_space_small"
            android:background="@color/white"
            android:paddingBottom="@dimen/activity_config_space_small"
            android:paddingLeft="@dimen/activity_config_space_small"
            android:paddingRight="@dimen/activity_config_space_small"
            android:paddingTop="@dimen/activity_config_space_small" >

            <TableLayout
                android:id="@+id/grids_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>

</FrameLayout>