                android:layout_width="@dimen/activity_config_button_width"
                android:layout_height="@dimen/activity_config_button_height"
                android:layout_marginBottom="@dimen/activity_config_space_very_small"
                android:layout_marginLeft="@dimen/activity_config_space_very_small"
                android:layout_marginTop="@dimen/activity_config_space_very_small"
                android:background="@drawable/btn_color_purple" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_config_space_very_small"
        android:layout_marginLeft="@dimen/activity_config_space_small"
        android:layout_marginRight="@dimen/activity_config_space_small"
        android:layout_marginTop="@dimen/activity_config_space_small"
        android:text="@string/activity_grid_config_border"
        android:textColor="@color/soft_black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/btn_border_no_border"
            android:layout_width="@dimen/activity_config_button_width"
            android:layout_height="@dimen/activity_config_button_height"
            android:layout_marginBottom="@dimen/activity_config_space_very_small"
            android:layout_marginRight="@dimen/activity_config_space_very_small"
            android:layout_marginTop="@dimen/activity_config_space_very_small"
            android:background="@drawable/btn_border_no_border" />

        <Button
            android:id="@+id/btn_border_small"
            android:layout_width="@dimen/activity_config_button_width"
            android:layout_height="@dimen/activity_config_button_height"
            android:layout_marginBottom="@dimen/activity_config_space_very_small"
            android:layout_marginLeft="@dimen/activity_config_space_very_small"
            android:layout_marginRight="@dimen/activity_config_space_very_small"
            android:layout_marginTop="@dimen/activity_config_space_very_small"
            android:background="@drawable/btn_border_small" />

        <Button
            android:id="@+id/btn_border_medium"
            android:layout_width="@dimen/activity_config_button_width"
            android:layout_height="@dimen/activity_config_button_height"
            android:layout_marginBottom="@dimen/activity_config_space_very_small"
            android:layout_marginLeft="@dimen/activity_config_space_very_small"
            android:layout_marginRight="@dimen/activity_config_space_very_small"
            android:layout_marginTop="@dimen/activity_config_space_very_small"
            android:background="@drawable/btn_border_medium" />

        <Button
            android:id="@+id/btn_border_large"
            android:layout_width="@dimen/activity_config_button_width"
            android:layout_height="@dimen/activity_config_button_height"
            android:layout_marginBottom="@dimen/activity_config_space_very_small"
            android:layout_marginLeft="@dimen/activity_config_space_very_small"
            android:layout_marginTop="@dimen/activity_config_space_very_small"
            android:background="@drawable/btn_border_large" />
    </LinearLayout>

</LinearLayout>