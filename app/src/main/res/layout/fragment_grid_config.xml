            <Button
                android:id="@+id/btn_color_blue"
                android:layout_width="@dimen/activity_config_button_width"
                android:layout_height="@dimen/activity_config_button_height"
                android:layout_marginBottom="@dimen/activity_config_space_very_small"
                android:layout_marginLeft="@dimen/activity_config_space_very_small"
                android:layout_marginRight="@dimen/activity_config_space_very_small"
                android:layout_marginTop="@dimen/activity_config_space_very_small"
                android:background="@drawable/btn_color_blue" />

            <Button
